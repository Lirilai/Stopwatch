<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:buttonStyle">@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored.StartButton</item>


    </style>

    <style name="text_stopwatch">
        <item name="android:textSize">@dimen/text_stopwatch_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/stopwatch</item>

    </style>

    <style name="Theme.App.Base" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:actionMenuTextAppearance">@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Menu.MyMenu</item>
        <item name="android:popupMenuStyle">@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Menu.MyMenu</item>

    </style>
    
    <style name="Base.TextAppearance.AppCompat.Widget.ActionBar.Menu.MyMenu">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/stopwatch</item>
    </style>


    <style name="Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored.StartButton">
        <item name="android:textColor">@drawable/text_button_color</item>
        <item name="android:textSize">24sp</item>

    </style>


    


</resources>
